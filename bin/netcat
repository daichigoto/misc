#!/bin/sh

#========================================================================
# Webページを取得
#========================================================================

#========================================================================
# Microsoft Edgeを使って取得する方法 (Windows)
#========================================================================
msedge='/c/Program Files (x86)/Microsoft/Edge/Application/msedge.exe'
if [ -e "$msedge" ]
then
	"$msedge"	--headless					\
			--dump-dom					\
			--enable-logging 				\
			${@}


#========================================================================
# Google Chromeを使って取得する方法 (Mac)
#========================================================================

#========================================================================
# curl を使って取得する方法
#========================================================================
else
	curl		--insecure 					\
			-A Mozilla/5.0 					\
			--location 					\
			--compressed 					\
			-get ${@}
fi
