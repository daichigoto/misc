#!/bin/sh

#========================================================================
# Webページを取得
#========================================================================

#========================================================================
# Webページ取得に利用するアプリケーション
#========================================================================
msedge='/c/Program Files (x86)/Microsoft/Edge/Application/msedge.exe'
chrome='/Applications/Google Chrome.app/Contents/MacOS/Google Chrome'
curl='curl'

#========================================================================
# Microsoft Edgeを使って取得する方法 (Windows)
#========================================================================
if [ -e "$msedge" ]
then
	"$msedge"	--headless					\
			--dump-dom					\
			--enable-logging 				\
			${@}

#========================================================================
# Google Chromeを使って取得する方法 (Mac)
#========================================================================
elif [ -e "$chrome" ]
then
	"$chrome"	--headless					\
			--dump-dom					\
			${@}

#========================================================================
# curl を使って取得する方法
#========================================================================
else
	"$curl"		--insecure 					\
			-A Mozilla/5.0 					\
			--location 					\
			--compressed 					\
			-get ${@}
fi
