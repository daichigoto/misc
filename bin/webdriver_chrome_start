#!/bin/sh

#========================================================================
# Mozilla Firefox WebDriverを起動する
#========================================================================

#========================================================================
# 動作しているMozilla Firefox WebDriverをすべて終了
#========================================================================
webdriver_firefox_stop

#========================================================================
# Seleniumモジュールがない場合にはインストールする
#========================================================================
if	[ -z "$(pip3 list | grep ^selenium)" ]
then
	echo 	'Seleniumモジュールをインストールします。'
	echo	'-------------------------------------------------------'
	pip3	install selenium
	echo	'-------------------------------------------------------'
	echo 	'Seleniumモジュールをインストール完了。'
fi

#========================================================================
# geckodriverがない場合にはインストールする
#========================================================================
if	! which geckodriver > /dev/null
then
	brew	install geckodriver
fi
