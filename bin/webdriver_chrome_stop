#!/bin/sh

#========================================================================
# Google Chrome WebDriverを終了する
#========================================================================

#========================================================================
# WebDriverプロセスを終了
#========================================================================
info=$(ps auxww | grep -i chromedriver | grep -v grep)

if	[ -n "$info" ]
then
	echo	"Google Chrome WebDriverを終了します。"

	# 動作しているWebDriver情報を表示
	echo	"-----------------------------------------------"
	ps	auxww						|
	grep	-i chromedriver					|
	grep	-v grep
	echo	"-----------------------------------------------"

	pids=$(	ps	auxww					|
		grep	-i chromedriver				|
		grep	-v grep					|
		awk	'{print $2}'				)
	if	[ -n "$pids" ]
	then
		kill	${pids}
	fi

	echo	"Google Chrome WebDriverを終了しました。"
else
	echo	"Google Chrome WebDriverは動作していません。"
fi
