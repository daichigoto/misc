#!/bin/sh

#========================================================================
# sortラッパースクリプト
#========================================================================

#=========================================================================
# sedコマンドパス
#=========================================================================
selfpath=$(realpath $0)
systemcmd=$(which -a sort | grep -v "$selfpath" | head -1)

#=========================================================================
# プラットフォームごとに処理を分岐
#=========================================================================
case "$(uname)" in
MSYS*)
	# WindowsではC:\WINDOWS\system32\sortが優先的に使われるため、
	# ラッパースクリプト経由でMSYS2のsortコマンドを使用する。
	exec /usr/bin/sort "$@"
	;;
*)
	exec "$systemcmd" "$@"
	;;
esac
