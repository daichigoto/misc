#!/usr/bin/osascript

# Chromeのサイズを1200px × 1200px に設定する
#
on run argv
    set chrome_bounds to bounds of window 1 of application "Google Chrome"

    set item 3 of chrome_bounds to (item 1 of chrome_bounds) + 600
    set item 4 of chrome_bounds to (item 2 of chrome_bounds) + 600

    tell application "Google Chrome"
        set bounds of front window to chrome_bounds
    end tell
end run
