#!/bin/sh

####################################################################
# 必要な変数を定義
####################################################################
intervalsec=30
workdir="$HOME"/Desktop
msg_start="converting... "
msg_done="done."

pattern="(スクリーンショット.*g)|(Screenshot.*g)|(IMG.*g)|(IMG.*G)|(Happy.*g)"

####################################################################
# スクリーンショットをNNN.jpgファイルへ変換
####################################################################
cd "$workdir"

printf "%s" "${msg_start}"
while :
do
	i=1
	ls -tr						|
	grep  -E "$pattern"				|
	while read img
	do
		jpg=$(printf "%03draw.jpg" "$i")
		case "$img" in
		*jpg|*jpeg)
			# ファイルサイズ縮小化目的
			gm convert "$img" "$jpg"
			;;
		*png)
			# JPEG変換およびファイルサイズ縮小化
			gm convert "$img" "$jpg"
			;;
		*PNG)
			# JPEG変換およびファイルサイズ縮小化
			gm convert "$img" "$jpg"
			;;
		esac
	
		i=$((1 + $i))
	done
	echo "${msg_done}"

	# 新しいスクリーンショットが作成されるか、または一定時間待つ
	if type wait_filechanges	> /dev/null 2>&1
	then
		wait_filechanges .
	else
		sleep $intervalsec
	fi

	printf "%s" "${msg_start}"
done
