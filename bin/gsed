#!/bin/sh

#========================================================================
# GNU sed ラッパースクリプト
#========================================================================

#=========================================================================
# sedコマンドパス
#=========================================================================
selfpath=$(realpath $0)
systemdate=$(which -a gsed | grep -v "$selfpath" | head -1)

#=========================================================================
# プラットフォームごとに処理を分岐
#=========================================================================
case "$(uname)" in
MSYS*)
	exec /usr/bin/sed "$@"
	;;
*)
	exec "$systemdate" "$@"
	;;
esac
