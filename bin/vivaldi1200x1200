#!/usr/bin/osascript

# Vivaldiのサイズを1200px × 1200px に設定する
#
on run argv
    set vivaldi_bounds to bounds of window 1 of application "Vivaldi"

    set item 3 of vivaldi_bounds to (item 1 of vivaldi_bounds) + 1200
    set item 4 of vivaldi_bounds to (item 2 of vivaldi_bounds) + 600 + 600

    tell application "vivaldi"
        set bounds of front window to vivaldi_bounds
    end tell
end run
