#!/bin/sh

scp 'virthost:~/Desktop/[0-9][0-9][0-9]raw.??g' ./

repository=$(basename $(dirname $(dirname ${PWD})))

case "$repository" in
itmedia)
	postfix=$(basename $(dirname ${PWD}) | tr '-' ' ' | awk '{print substr($2,1,3)}')

	count=$(ls ../.. | grep $(date '+%Y%m%d') | wc -l | awk '{print $1}')
	count=$(printf "%02d" $count)

	echo mv 001raw.jpg daichigoto_${postfix}${count}.jpg
	mv 001raw.jpg daichigoto_${postfix}${count}.jpg

	echo mv 002raw.jpg 001raw.jpg
	mv 002raw.jpg 001raw.jpg
	;;
*)
	cd ..
	make imagelist-s
	;;
esac
