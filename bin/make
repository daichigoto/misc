#!/bin/sh

case "$(uname)" in
# FreeBSD
FreeBSD)
	# BSDmake
	exec /usr/bin/make "${@}"
	;;
# Mac
Darwin)
	if [ -n "$(which bsdmake)" ]
	then
		brew install bsdmake
	fi

	case "$(pwd)" in
	${HOME}/Documents/*)
		# BSDmake
		exec $(which bsdmake | head -1) "${@}"
		;;
	*)
		# GNUmake
		exec /usr/bin/make "${@}"
		;;
	esac
	;;
*)
	if [ -z "$(which -a make | grep -v ${0} | head -1)" ]
	then
		echo "no such hoge command: make" 1>&2
		exit 1
	else
		exec $(which make | grep -v ${0} | head -1) "${@}"
	fi
	;;
esac
