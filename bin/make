#!/bin/sh

if [ -n "$(which bsdmake)" ]
then
	case "$(pwd)" in
	${HOME}/Documents/*)
		exec $(which bsdmake | head -1) "${@}"
		;;
	esac
fi

if [ -e /usr/bin/make ]
then
	exec /usr/bin/make "${@}"
fi

if [ -z "$(which make | grep -v ${0} | head -1)" ]
then
	echo "no such command: make" 1>&2
	exit 1
else
	exec $(which make | grep -v ${0} | head -1)
fi
